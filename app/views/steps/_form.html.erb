<%= form_for([@trip, @step]) do |f| %>
  <% if @step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      
  <div class="field">
    <%= f.label :trip %><br>
    <p><%= @trip.name %></p>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :lon %><br>
    <%= f.text_field :lon %>
  </div>
  <div class="field">
    <%= f.label :lat %><br>
    <%= f.text_field :lat %>
  </div>
  <div class="field">
    <%= f.label :arrival %><br>
    <%= f.date_select :arrival %>
  </div>
  <div class="field">
    <%= f.label :stay %><br>
    <%= f.number_field :stay %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
